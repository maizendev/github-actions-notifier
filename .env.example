# Server Configuration
PORT=3000                                    # Port for the webhook server
APP_URL=https://your-domain.com             # Your application's public URL

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here      # Get from @BotFather
ADMIN_IDS=[123456789]                       # Array of admin Telegram user IDs

# GitHub Configuration
GITHUB_WEBHOOK_SECRET=your_webhook_secret    # Secret for GitHub webhook validation

# Message Templates (optional)
TELEGRAM_SUCCESS_EMOJI=✅                    # Emoji for successful actions
TELEGRAM_ERROR_EMOJI=❌                      # Emoji for failed actions
TELEGRAM_MESSAGE_TEMPLATE="{emoji} GitHub Action '{action}' completed {status}!\nRepository: {repository}\nBranch: {branch}" 